<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="lakion_sylius_elastic_search.form_type.product_price_range_filter" class="Lakion\SyliusElasticSearchBundle\Form\Type\ProductPriceRangeFilterType">
            <tag name="form.type" />
            <tag name="filter.type" type="price" />
        </service>

        <service id="lakion_sylius_elastic_search.form_type.filter_scope_type" class="Lakion\SyliusElasticSearchBundle\Form\Type\FilterSetType">
            <argument type="service" id="lakion_sylius_elastic_search.form_registry.filters"/>
            <argument type="service" id="lakion_sylius_elastic_search.filter_set_configuration_provider.composite" />
            <tag name="form.type" />
        </service>

        <service id="lakion_sylius_elastic_search.form_type.attribute_value_filter" class="Lakion\SyliusElasticSearchBundle\Form\Type\AttributeValueFilterType">
            <argument type="service" id="fos_elastica.manager.orm" />
            <argument type="service" id="lakion_sylius_elastic_search.query_factory.product_has_attribute_value" />
            <argument type="service" id="lakion_sylius_elastic_search.factory.search" />
            <argument>%sylius.model.product.class%</argument>
            <tag name="form.type" />
            <tag name="filter.type" type="attribute" />
        </service>

        <service id="lakion_sylius_elastic_search.form_type.option_code_filter" class="Lakion\SyliusElasticSearchBundle\Form\Type\OptionCodeFilterType">
            <argument type="service" id="fos_elastica.manager.orm" />
            <argument type="service" id="lakion_sylius_elastic_search.query_factory.product_has_option_code" />
            <argument type="service" id="lakion_sylius_elastic_search.factory.search" />
            <argument>%sylius.model.product.class%</argument>
            <tag name="form.type" />
            <tag name="filter.type" type="option" />
        </service>

        <service id="lakion_sylius_elastic_search.form_type.search" class="Lakion\SyliusElasticSearchBundle\Form\Type\SearchType">
            <tag name="form.type" />
            <tag name="filter.type" type="search" />
        </service>
    </services>
</container>
